<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Learn">

    <android.support.v7.widget.CardView
        android:id="@+id/card_three"
        android:layout_width="280dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="#00ff25"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69" >

        <TextView
            android:id="@+id/level_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="Level Three"
            android:textColor="#000"
            android:textSize="24sp"
            app:fontFamily="monospace" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_two"
        android:layout_width="280dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="#00ff25"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.515" >

        <TextView
            android:id="@+id/level_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="Level Two"
            android:textColor="#000"
            android:textSize="24sp"
            app:fontFamily="monospace" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="369dp"
        android:layout_height="121dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Choose your preferred level"
        android:textColor="#000"
        android:textSize="30sp"
        app:fontFamily="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_one"
        android:layout_width="280dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="#00ff25"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.331" >

        <TextView
            android:id="@+id/level_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="Level One"
            android:textColor="#000"
            android:textSize="24sp"
            app:fontFamily="monospace" />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>